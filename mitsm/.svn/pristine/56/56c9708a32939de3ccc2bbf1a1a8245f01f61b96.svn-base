<f:view xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html" xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.org/ui">

	<style type="text/css">
.greeting {
	font-size: 24px;
	font-family: Tahoma, Verdana, STHeiTi, simsun, sans-serif;
	color: orange;
	font-weight: bold;
}
</style>
	<h:form>
		<p:commandButton value=" " id="hiddenBtn" binding="#{hiddenBtn}"
			action="#{loginView.checkIn}"/>
		<script type="text/javascript">
			$(document).ready(function(){
				$("[id='#{hiddenBtn.clientId}']").hide();
				$("[id='#{hiddenBtn.clientId}']").click();
			});
		</script>
		<div style="text-align:center; margin-top: 6%;">
			<p:graphicImage value="/icons/smile.png" /><br/>
			<div style="text-align: center;">
			<p:outputLabel value="#{pagesView.loginedUser.name}"
				styleClass="greeting" />
			<p:outputLabel value="#{pagesView.appellation}" styleClass="greeting" />
			<p:outputLabel value="，#{pagesView.timePeriod}好" styleClass="greeting" />
			<br />
			<p:outputLabel value="欢迎您登录人员管理系统" styleClass="greeting"/>
			</div>
		</div>
	</h:form>
</f:view>