body{background-image:url("../images/loginBK2.jpg");filter:alpha(opacity=30);background-size:100%;}
#header{
	border:0px solid blue;height: 15%;
	width:80% ;
	text-align:center;
	line-height: 40px;
	position:absolute;
	color:#729fcf;
	left:8%;
	top:5%;
	font-size: 35px;
	font-family: monospace;
	font-weight: 400; 
	
}
#loginInfo{
	border:0px solid blue;
	height: 65%;width: 90%;
	position: absolute;
	top:20%;
	left: 5%;
